<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andoid="http://schemas.android.com/apk/res-auto"
    tools:context="it.unibo.sistemidigitali.exam.jhon_ai.UtteranceActivity"
    android:orientation="vertical"
  >


    <EditText
        android:id="@+id/text"
        android:layout_width="414dp"
        android:layout_height="77dp"
        android:hint="Tap to Speak"
        andoid:layout_constraintBottom_toTopOf="@+id/buttonfilm"
        andoid:layout_constraintEnd_toEndOf="parent"
        andoid:layout_constraintHorizontal_bias="0.0"
        andoid:layout_constraintStart_toStartOf="parent"
        andoid:layout_constraintTop_toTopOf="parent"
        andoid:layout_constraintVertical_bias="0.026" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="93dp"
        android:layout_gravity="center"
        android:layout_marginBottom="39dp"
        android:background="@color/none"
        android:src="@drawable/ic_film_off"
        andoid:layout_constraintBottom_toTopOf="@+id/buttonfilm"
        andoid:layout_constraintEnd_toEndOf="parent"
        andoid:layout_constraintStart_toStartOf="parent"
        andoid:layout_constraintTop_toBottomOf="@+id/text"
        andoid:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonfilm"
        android:layout_width="178dp"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_corners"
        android:text="FIND YOUR QUOTE"
        android:textColor="#FFFFFF"
        andoid:layout_constraintEnd_toEndOf="parent"
        andoid:layout_constraintStart_toStartOf="parent"
        andoid:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        andoid:layout_constraintBottom_toBottomOf="parent"
        andoid:layout_constraintEnd_toEndOf="parent"
        andoid:layout_constraintHorizontal_bias="0.0"
        andoid:layout_constraintStart_toStartOf="parent"
        andoid:layout_constraintTop_toBottomOf="@+id/buttonfilm"
        andoid:layout_constraintVertical_bias="0.31"
       />


</androidx.constraintlayout.widget.ConstraintLayout>



